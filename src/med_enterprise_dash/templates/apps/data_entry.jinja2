{% extends "../base.jinja2" %}

{% block title %} {{ branding }} | {{ name }} {% endblock %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="/{{route_prefix}}static/bootstrap/css/bootstrap.css">
<link rel="stylesheet" href="/{{route_prefix}}static/main.css">
<link rel="stylesheet" href="/{{route_prefix}}static/med-data-entry/css/app.css">
{% endblock %}

{% block body %}
{% include "../header.jinja2" %}

<section class="mfws">
    <noscript>
        <h1>{{ name }}: {{username}}</h1>
        <p><strong>Sorry but med-data-entry cannot work properly without JavaScript enabled.</strong></p>
        <p><strong>Please enable it to continue.</strong></p>
    </noscript>
    <div id="frontEndWiring" style="display: none;">
        {
        "endpoints": {
        "countries":"{{ apis.countries }}",
        "events":"{{ apis.events }}?id=",
        "organizations":"{{ apis.organizations }}?s=",
        "programs":"{{ apis.programs }}",
        "submit":"{{ apis.submission }}",
        "terms":"{{ apis.terms }}",
        "traceabilityTags":"{{ apis.traceability_tags }}",
        "tracks":"{{ apis.tracks }}",
        "zulu":""
        },
        "testResponse":false
        }
    </div>
    <div id="app"></div>
    <script src="/{{route_prefix}}static/med-data-entry/js/chunk-vendors.js"></script>
    <script src="/{{route_prefix}}static/med-data-entry/js/app.js"></script>
</section>

{% include "../footer.jinja2" %}
{% endblock %}
